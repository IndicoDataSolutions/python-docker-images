#! /bin/bash
set -e

package=${1}
extras=${2}
commit=${3}

IFS='/'; repo=($package); unset IFS;

cd /
git clone https://${GITHUB_ACCESS_TOKEN}@github.com/IndicoDataSolutions/${repo}.git
cd ${package}

if [ ! -z $commit ]; then
    git checkout ${commit}
fi

if [ -f "requirements.txt" ]; then
    pip3 install --find-links=/root/.cache/pip/wheels -r requirements.txt
fi

if [ -z $extras ]; then
    pip3 install --find-links=/root/.cache/pip/wheels -e .
else
    extras=$(echo $extras | sed 's/[][]//g')
    pip3 install --find-links=/root/.cache/pip/wheels -e .[$extras]
fi

python3 setup.py develop --no-deps
cd /
