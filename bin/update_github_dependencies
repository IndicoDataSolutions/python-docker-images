
#! /bin/bash

package=${1}
commit=${2}
extras=${3}

echo "Installing ${package} @ ${commit} with extras: ${extras:=None}"

set -e
cd /${package}
git fetch origin
git checkout ${commit}
if [ -f "requirements.txt" ]; then
    pip3 install --process-dependency-links --find-links=/root/.cache/pip/wheels -r requirements.txt
else
    if [ -z $extras ]; then
        pip3 install --process-dependency-links --find-links=/root/.cache/pip/wheels -e .
    else
        pip3 install --process-dependency-links --find-links=/root/.cache/pip/wheels -e .[$extras]
    fi
fi
python3 setup.py develop --no-deps
cd /