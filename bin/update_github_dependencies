
#! /bin/bash

package=${1}
shift
commit=${1}
shift
extras=${1}
echo "Installing ${package} @ ${commit} with extras: ${extras:=None}"

set -e
cd /${package}
git fetch origin
git checkout ${commit}
if [ -f "requirements.txt" ]; then
    pip3 install --find-links=/root/.cache/pip/wheels -r requirements.txt
else
    if [ -z $extras ]; then
        pip3 install --find-links=/root/.cache/pip/wheels .
    else
        pip3 install --find-links=/root/.cache/pip/wheels .[$extras]
    fi
fi
python3 setup.py develop --no-deps
cd /