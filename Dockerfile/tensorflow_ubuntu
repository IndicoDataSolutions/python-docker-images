FROM tensorflow/tensorflow:1.13.2-gpu-py3 as tensorflow-image

RUN mkdir -p /root/.cache/pip/wheels && \
    cd /root/.cache/pip/wheels && \
    chmod 1777 /tmp && \
    apt-get update && \
    apt-get install --no-install-recommends -y build-essential software-properties-common locales python3 python3-dev python3-pip git wget curl vim postgresql-client && \
    pip3 install setuptools wheel && \
    locale-gen en_US.UTF-8

ENV LANG='en_US.UTF-8' LANGUAGE='en_US:en' LC_ALL='en_US.UTF-8' PYTHONIOENCODING='utf-8'

WORKDIR /root/.cache/pip/wheels
COPY ./bin /usr/bin
