FROM gcr.io/new-indico/ubuntu:18.04

RUN apt-get update -y --fix-missing \
    && apt-get install -y \
    build-essential \
    libgflags-dev \
    libsnappy-dev \
    zlib1g-dev \
    libbz2-dev \
    liblz4-dev \
    librocksdb-dev \
    libffi-dev \
    httpie \ 
    kafkacat \
    librdkafka-dev \
    libyajl-dev

ARG ROCKSDB_VERSION=0.7.0
ARG FAUST_STREAMING_VERSION=0.4.6
ARG CONFLUENT_KAFKA_CLIENT_VERSION=1.5.0
ARG FASTAVRO_VERSION=1.0.0


RUN pip3 install python-rocksdb==${ROCKSDB_VERSION} && \
    pip3 install faust-streaming[rocksdb,fast,uvloop]==${FAUST_STREAMING_VERSION} && \
    pip3 install confluent-kafka==${CONFLUENT_KAFKA_CLIENT_VERSION} && \
    pip3 install fastavro==${FASTAVRO_VERSION}